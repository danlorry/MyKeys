<div class="panel panel-default">
	<div class="panel-body">
		
		<!-- Image -->
		<div class="row">
			<div class="col-md-12">
				<%= image_tag avatar_url(current_user), class: "img-responsive" %>
				<%= @agent.user.fullname %>
			</div>
		</div>

		<br>

		<!-- Main Info -->
		<div class="row">
			<div class="col-md-8">
				<div class="row">
									
					<div class="col-md-9">
						<h4><%= @agent.agent_type %></h4>
						<%= @agent.address %>

						<div class="row text-center row-space-1">
							<div class="col-sm-3">
								<i class="fa fa-calendar fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-calendar-check-o fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-phone fa-2x"></i>
							</div>
							<div class="col-sm-3">
								<i class="fa fa-envelope fa-2x"></i>
							</div>
						</div>

						<div class="row text-center">
							<div class="col-sm-3">
								<%= @agent.days_availability %> 
							</div>
							<div class="col-sm-3">
								<%= @agent.time_availability %> 
							</div>
						<div class="col-sm-3">
								<%= @agent.phone_number %> 
							</div>
							<div class="col-sm-3">
								<%= @agent.email %> 
							</div>
						</div>

					</div>
				</div>
			</div>

		</div>

		<!-- About -->
		<div class="row">
			<div class="col-md-12">
				<h2>Resumen de trayectoria</h2>
				<p><%= @agent.about %></p>
			</div>
		</div>

		

		
		<br>
		<hr>

		<!-- Reviews  PENDIENTE-->
		

		<!-- Google Map -->
		<div class="row">
			<div class="col-md-12">
				
				<div id="map"></div>

				<style>
		      #map {
		        width: 100%;
		        height: 400px;
		      }
		    </style>

		    <script src="https://maps.googleapis.com/maps/api/js"></script>
		    <script>
		      function initialize() {
		        var mapCanvas = document.getElementById('map');
		        var mapOptions = {
		          center: new google.maps.LatLng(<%= @agent.latitude %>, <%= @agent.longitude %>),
		          zoom: 14,
		          mapTypeId: google.maps.MapTypeId.ROADMAP
		        }
		        var map = new google.maps.Map(mapCanvas, mapOptions);

		        var marker = new google.maps.Marker({
		        	position: new google.maps.LatLng(<%= @agent.latitude %>, <%= @agent.longitude %>),
		        	title: "MyKeys" 
		        });

		        marker.setMap(map);
		      }
		      google.maps.event.addDomListener(window, 'load', initialize);
		    </script>


			</div>
		</div>

	</div>
</div>

